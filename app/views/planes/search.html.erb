<script id="search" type="text/template"> 
  <div id="searchDiv">
    <h2>Search Flights:</h2>
    <form id="searchForm" action="#">
      <label for="departing">Departing From: </label>
      <input name="departing" id="departingSearch" type="text" placeholder="Departing From.. eg. 'SYD'">
      <br><br>
      <label for="arriving">Arriving At: </label>
      <input name="arriving" id="arrivingSearch" type="text" placeholder="Arriving At.. eg. 'SFO'">
      <br><br>
      <label for="date">Departure Date: </label>
      <input name="date" id="dateSearch" type="date" placeholder="">
      <br>
      <p> </p>
      <button>Submit Search</button>
    </form>
    <div id="searchResults">
      <p>Results Appear Here</p>
    </div>
  </div>
</script>

<script id="flightIndexTemplate" type="text/template">
  Date: {{ date }} - Flight No: {{ id }} - Origin: {{ origin }} - Destination: {{ destination }}
</script>

<script id="flightView" type="text/template">
  <div id="flightViewDiv">
  <h2>Flight {{ id }}</h2>
  <h3>Seats Remaining: {{ rows * columns }}</h3>
</script>

